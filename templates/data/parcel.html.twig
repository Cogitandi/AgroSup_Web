{% extends 'base.html.twig' %}

{% block title %} Lista działek {% endblock %}

{% block body %}
    <section id="content">
        <div class="container-fluid mt-3">
            <div class="row">
                <!--- Left menu -->
                <div class="col-md-2 mb-4">  
                    <ul class="nav nav-pills flex-column">
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d1" href="#" >Plany roczne</a></li>       
                        <li><ul style="padding-left: 20px; list-style: none">
                                <li><a class="d1 nav-link collapse" href="/yearPlan" >Lista</a></li>
                                <li><a class="d1 nav-link collapse" href="/yearPlan/add" >Stwórz nowy plan</a></li>
                            </ul></li>
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d3" href="#" >Osoby</a></li>       
                        <li><ul style="padding-left: 20px; list-style: none">
                                <li><a class="d3 nav-link collapse" href="/operator" >Lista</a></li>
                                <li><a class="d3 nav-link collapse" href="/operator/add" >Dodaj</a></li>
                            </ul></li>
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d2" href="#" >Pola</a></li>
                        <li><ul style="padding-left: 20px; list-style: none">
                                <li><a class="d2 nav-link collapse" href="/field" >Lista</a></li>
                                <li><a class="d2 nav-link collapse" href="/field/add" >Stwórz nowe pole</a></li>
                            </ul></li>
                        <li><a class="nav-link font-weight-bold active" href="/parcel" >Działki</a></li>
                        <li><a class="nav-link font-weight-bold" href="/selectPlants" >Wybierz rośliny</a></li>
                    </ul>
                </div>

                <!--- Content -->
                <div class="col-md-10">
                    <div class="container-md mx-4">
                        <h2 class="text-center">Działki w sezonie {{ start }}/{{ start+1 }} </h2>   
                        <div class="table-responsive">                     
                            <table id="axs" class="text-center table w-75 mx-auto table-bordered">
                                <thead>
                                    <tr>
                                        <th scope ="col">#</th>
                                        <th scope ="col">Pole</th>
                                        <th scope ="col">Numer działki</th>
                                        <th scope ="col">Powierzchnia[ha]</th>
                                        <th scope ="col">Paliwo</th>
                                        <th scope ="col">Dopłaty</th>
                                        <th scope ="col">Uprawa</th>
                                    </tr>
                                    <tr>
                                        <td class="align-middle"></td>
                                        <td class="align-middle"></td>
                                        <td class="align-middle"></td>
                                        <td class="align-middle"></td>
                                        <td class="align-middle">
                                            <select id="fuelFilter">
                                                <option selected="selected" value="all">Wszystkie</option>
                                                <option value="Tak">Tak</option>
                                                <option value="Nie">Nie</option>
                                            </select>
                                        </td>
                                        <td class="align-middle">
                                            <select id="arimrFilter">
                                                <option selected="selected" value="all">Wszyscy</option>
                                                <option value="Brak">Brak</option>
                                                {% for operator in yearPlan.getOperators %}
                                                    <option value="{{ operator.getFirstName}}">{{ operator.getFirstName}}</option>
                                                {% endfor %}
                                            </select>
                                        </td>
                                        <td class="align-middle">
                                            <select id="cropFilter">
                                                <option selected="selected" value="all">Wszystkie</option>
                                                <option value="Brak">Brak</option>
                                                {% for plant in yearPlan.getPlants %} 
                                                    <option value="{{ plant.getName }}">{{ plant.getName }}</option>
                                                {% endfor %}
                                            </select>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody >


                                    {% set licznik = 1 %}
                                    {% for field in yearPlan.getFields %}
                                        <!-- Count amount of parcels -->
                                        {% set counter = 0 %}
                                        <!-- Display each parcel
                                        {% for item in field.getParcels %}
                                            <!-- Fuel status -->
                                            {% if item.fuelApplication == 1 %}
                                                {% set fuel = "Tak" %}
                                            {% else %}
                                                {% set fuel = "Nie" %}
                                            {% endif %}

                                            <!-- Arimr status -->
                                            {% if item.arimrOperator == NULL %}
                                                {% set operator = "Brak" %}
                                            {% else %}
                                                {% set operator = item.arimrOperator.firstname  %}
                                            {% endif %}


                                            <tr>
                                                <td class="align-middle">{{ licznik }}</td>

                                                <td class="align-middle" >{{ item.Field.name }}</td>

<!--{% if counter == 0 %}<td class="align-middle" rowspan="{{ item.Field.getParcelAmount }}">{{ item.Field.name }}</td> {% endif %}-->
                                                <td class="align-middle">{{ item.parcelNumber }}</td>
                                                <td class="align-middle">{{ item.getCultivatedAreaHa }}</td>
                                                <td name ="fuel" class="align-middle">{{ fuel }}</td>
                                                <td name ="arimr" class="align-middle">{{ operator }}</td>

                                                <td name ="crop" class="align-middle" >{% if item.Field.plant %}{{ item.Field.plant.name }}{% else %} brak {% endif %}</td>

<!--{% if counter == 0 %}<td class="align-middle" rowspan="{{ item.Field.getParcelAmount }}">{% if item.field.plant %} {{ item.Field.plant.name }} {% else %} brak {% endif %}</td> {% endif %}-->
                                            </tr>
                                            {% set licznik = licznik+1 %}
                                            {% set counter = counter+1 %}
                                        {% endfor %}
                                        {% set counter = 0 %}
                                    {% endfor %}



                                </tbody>
                            </table>
                        </div>  
                    </div>
                </div>
                <!--- End content -->

            </div>
        </div>                   
    </section>
    <script>
        $(document).ready(function () {
            var $fuelSelect = $('#fuelFilter');
            var $arimrSelect = $('#arimrFilter');
            var $cropSelect = $('#cropFilter');

            $fuelSelect.change(function () {
                checkAllRows();
            });
            $arimrSelect.change(function () {
                checkAllRows();
            });
            $cropSelect.change(function () {
                checkAllRows();
            });

        });

        function checkAllRows($select) {
            $('tbody').find("tr").each(function () {
                $parcelFuel = $(this).find("td[name=fuel").text();
                $parcelArimr = $(this).find("td[name=arimr").text();
                $parcelCrop = $(this).find("td[name=crop").text();
                $filterFuel = $('#fuelFilter').val();
                $filterArimr = $('#arimrFilter').val();
                $filterCrop = $('#cropFilter').val();
                if (isRowMatched($filterFuel, $parcelFuel) &&
                        isRowMatched($filterArimr, $parcelArimr) &&
                        isRowMatched($filterCrop, $parcelCrop)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

        function isRowMatched($filterOption, $rowValue) {
            if ($filterOption == 'all')
                return true;

            if ($filterOption == $rowValue) {
                return true;
            } else {
                return false;
            }

        }




    </script>
{% endblock %}