{% extends 'base.html.twig' %}

{% block title %} Dodaj osobe {% endblock %}

{% block body %}
    <section id="content">
        <div class="container-fluid mt-3">
            <div class="row">

                <!--- Left menu -->
                <div class="col-md-2 mb-4">  
                    <ul class="nav nav-pills flex-column">
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d1" href="#" >Plany roczne</a></li>       
                        <li><ul style="padding-left: 20px; list-style: none">
                            <li><a class="d1 nav-link collapse" href="/yearPlan" >Lista</a></li>
                            <li><a class="d1 nav-link collapse" href="/yearPlan/add" >Stwórz nowy plan</a></li>
                        </ul></li>
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d3" href="#" >Osoby</a></li>       
                        <li><ul style="padding-left: 20px; list-style: none">
                            <li><a class="d3 nav-link " href="/operator" >Lista</a></li>
                            <li><a class="d3 nav-link active" href="/operator/add" >Dodaj</a></li>
                        </ul></li>
                        <li><a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d2" href="#" >Pola</a></li>
                        <li><ul style="padding-left: 20px; list-style: none">
                            <li><a class="d2 nav-link collapse" href="/field" >Lista</a></li>
                            <li><a class="d2 nav-link collapse" href="/field/add" >Stwórz nowe pole</a></li>
                        </ul></li>
                        <li><a class="nav-link font-weight-bold" href="/parcel" >Działki</a></li>
                    </ul>
                </div>
                <!--- Content -->
                <div class="col-md-10">
                    <div class="container-md mx-4">
                        {{ form_start(addNewOperatorForm) }}

                        {% if not addNewOperatorForm.vars.valid %}
                            {# Loop through every form item #}
                            {% for child in addNewOperatorForm.children %}
                                {# Display the errors of the form item #}
                                {%for error in child.vars.errors%}
                                    <div class="alert alert-danger">{{error.message}}</div>
                                {%endfor%}
                            {%endfor%}
                        {%endif%}

                        <div class="form-group">
                            <label for="firstName">Imię</label>
                            {{ form_widget(addNewOperatorForm.firstName, {'attr': 
                    {'class': 'form-control',
                    'placeholder': 'firstName', 
                    'aria-describedby': 'firstNameHelp',
                    'onblur':   'sprawdzPole("add_operator_form_firstName",firstName_reg)'}
                    })}}
                            <small id="firstNameHelp" class="form-text text-muted">Podaj imię osoby, która zarządza gospodarstwem.</small>
                        </div>
                        <div class="form-group">
                            <label for="surname">Nazwisko</label>
                            {{ form_widget(addNewOperatorForm.surname, {'attr': 
                    {'class': 'form-control',
                    'placeholder': 'surname',
                    'aria-describedby': 'surnameHelp',
                    'onblur':   'sprawdzPole("add_operator_form_surname",surname_reg)'}
                    })}}
                            <small id="surnameHelp" class="form-text text-muted">Podaj nazwiso osoby, która zarządza gospodarstwem.</small>
                        </div>
                        <div class="form-group">
                            <label for="arimrNumber">Numer ARIMR</label>
                            {{ form_widget(addNewOperatorForm.arimrNumber, {'attr': 
                    {'class': 'form-control',
                    'placeholder': 'ARIMR number',
                    'aria-describedby': 'arimrNumberHelp',
                    'onblur':   'sprawdzPole("add_operator_form_arimrNumber",arimrNumber_reg)'}
                    })}}
                            <small id="arimrNumberHelp" class="form-text text-muted">Podaj numer otrzymany od ARIMR. (opcjonalnie) </small>
                        </div>

                        <button type="submit" class="btn btn-primary">Dodaj</button>

                        {{ form_end(addNewOperatorForm) }}
                    </div>
                </div>
                <!--- End content -->
            </div>
        </div>               
    </section>
{% endblock %}

{% block javascripts %}
    <script src="/validate.js"></script>
{% endblock %}