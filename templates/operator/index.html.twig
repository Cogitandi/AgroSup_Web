{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} {% endblock %}

{% block body %}
    <section id="content">
        <div class="container-fluid row mt-3">
            <div class="col-2 mr-3">
                <ul class="nav nav-pills flex-column">
                    <a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d1" href="#" >Plany roczne</a>       
                    <div style="padding-left: 20px">
                        <a class="d1 nav-link collapse" href="/yearPlan" >Lista</a>
                        <a class="d1 nav-link collapse" href="/yearPlan/add" >Stwórz nowy plan</a>
                    </div>
                    <a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d3" href="#" >Osoby</a>       
                    <div style="padding-left: 20px">
                        <a class="d3 nav-link active" href="/operator" >Lista</a>
                        <a class="d3 nav-link" href="/operator/add" >Dodaj</a>
                    </div>
                    <a class="nav-link font-weight-bold" data-toggle="collapse" data-target=".d2" href="#" >Pola</a>
                    <div style="padding-left: 20px">
                        <a class="d2 nav-link collapse" href="/field" >Lista</a>
                        <a class="d2 nav-link collapse" href="/field/add" >Stwórz nowe pole</a>
                    </div>
                    <a class="nav-link font-weight-bold" href="/parcel" >Działki</a>
                </ul>
            </div>
            <div class="col-9">

                <h2 class="text-center">Osoby w gospodarstwie  </h2>                  
                <table id="axs" class="text-center table w-75 mx-auto table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope ="col">#</th>
                            <th scope ="col">Imię</th>
                            <th scope ="col">Nazwisko</th>
                            <th scope ="col">numer ARiMR</th>
                            <th scope ="col"></th> 
                        </tr>
                    </thead>
                    <tbody >
                        {% set licznik = 1 %}
                        {% for item in operator %}
                            <tr>
                                <th class="align-middle" scope="row">{{ licznik }}</th>
                                <td class="align-middle">{{ item.firstName }}</td>
                                <td class="align-middle">{{ item.surName }}</td>
                                <td class="align-middle">{{ item.arimrNumber }}</td>

                                <td class="align-middle"><input type="submit" value="Usuń" class="btn btn-danger" onClick="location.href = '{{ path('delete', {'id': item.id}) }}'"/></td>
                            </tr>
                            {% set licznik = licznik+1 %}
                        {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </section>
{% endblock %}